@model Testing.Models.MessageModel


@{
    ViewBag.Title = "AdminPanel";
}

<h2>Edit</h2>


@using (Html.BeginForm("SendMessage", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MessageModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MessageContent)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MessageContent)
            @Html.ValidationMessageFor(model => model.MessageContent)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.StatusMessage)
        </div>
    </fieldset>

}

